<extension xmlns="http://ns.adobe.com/air/extension/3.1">
	<id>com.adx.Tracker</id>
	<versionNumber>1</versionNumber>
	<platforms>
		<platform name="Android-ARM">
			<applicationDeployment>
				<nativeLibrary>AdXAndroidLibrary.jar</nativeLibrary>
				<initializer>com.AdX.tag.AdXExtension</initializer>
				<finalizer>com.AdX.tag.AdXExtension</finalizer>
			</applicationDeployment>
		</platform>
		<platform name="iPhone-ARM">
			<applicationDeployment>
				<nativeLibrary>libAdXTrackingiOSLibrary.a</nativeLibrary>
				<initializer>AdXExtInitializer</initializer>
				<finalizer>AdXExtFinalizer</finalizer>
			</applicationDeployment>
		</platform>
		<platform name="default"> 
                        <applicationDeployment/> 
                </platform> 
	</platforms>
</extension>
