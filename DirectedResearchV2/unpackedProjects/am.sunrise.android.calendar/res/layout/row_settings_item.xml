        <TextView android:textSize="@dimen/settings_title_font_size" android:textColor="@color/settings_title" android:ellipsize="end" android:id="@id/settings_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="sans-serif" />
        <TextView android:textSize="@dimen/settings_summary_font_size" android:textColor="@color/settings_summary" android:ellipsize="end" android:id="@id/settings_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="sans-serif" />
    </LinearLayout>
</LinearLayout>