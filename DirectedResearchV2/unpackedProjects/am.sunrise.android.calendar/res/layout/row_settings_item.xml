<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/settings_min_row_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
