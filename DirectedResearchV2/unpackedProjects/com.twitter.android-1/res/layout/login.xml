<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:twitter="http://schemas.android.com/apk/res/com.twitter.android">
    <com.twitter.android.widget.Navbar android:id="@id/navbar" style="@style/Navbar.Signup">
        <TextView android:id="@id/title" android:text="@string/login_signin" android:layout_alignParentLeft="false" style="@style/NavbarTitle" />
        <Button android:id="@id/title_button_3" android:text="@string/signup_sign_up" android:layout_alignParentRight="true" android:onClick="onClickHandler" style="@style/TitleBtn.Text.Dark" />
    </com.twitter.android.widget.Navbar>
    <ScrollView android:background="@color/bg_list" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <com.twitter.android.widget.CardRowView android:id="@id/login_form" android:layout_width="fill_parent" android:layout_height="wrap_content" twitter:cardStyle="single">
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/SignupForm">
                    <TextView android:text="@string/login_username" style="@style/SignupLabel" />
                    <EditText android:id="@id/login_username" android:inputType="textEmailAddress" style="@style/SignupEdit" />
                    <TextView android:text="@string/login_password" style="@style/SignupLabel" />
                    <EditText android:id="@id/login_password" android:password="true" android:singleLine="true" android:inputType="textPassword" style="@style/SignupEdit" />
                </LinearLayout>
            </com.twitter.android.widget.CardRowView>
            <Button android:enabled="false" android:id="@id/login_login" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_row_padding" android:layout_marginRight="@dimen/list_row_padding" android:text="@string/login_signin" android:layout_below="@id/login_form" android:onClick="onClickHandler" style="@style/Button.Submit" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>