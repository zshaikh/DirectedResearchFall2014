<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/story_image" android:layout_width="@dimen/discover_news_image" android:layout_height="@dimen/discover_news_image" android:layout_marginLeft="@dimen/standard_spacing" android:scaleType="centerCrop" android:layout_alignParentTop="true" android:layout_alignParentRight="true" />
