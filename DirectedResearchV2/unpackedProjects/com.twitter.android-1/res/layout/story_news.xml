    <TextView android:id="@id/story_news_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@id/story_image" android:layout_below="@id/story_news_title" android:layout_alignParentLeft="true" style="@style/Story" />
    <TextView android:textColor="@color/list_item_secondary_text" android:id="@id/story_news_url" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_toLeftOf="@id/story_image" android:layout_below="@id/story_news_description" style="@style/Story" />
</merge>