<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.twitter.android">
    <permission android:description="@string/permdesc_readTwitterData" android:label="@string/permlab_readTwitterData" android:name="com.twitter.android.permission.READ_DATA" android:permissionGroup="android.permission-group.PERSONAL_INFO" android:protectionLevel="signature"/>
    <permission android:name="com.twitter.android.permission.RESTRICTED" android:protectionLevel="signature"/>
    <permission android:name="com.twitter.android.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.twitter.android.permission.RESTRICTED"/>
    <uses-permission android:name="com.twitter.android.permission.READ_DATA"/>
    <uses-permission android:name="com.twitter.android.permission.C2D_MESSAGE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true"/>
    <application android:debuggable="false" android:hardwareAccelerated="true" android:icon="@drawable/ic_launcher_twitter" android:label="@string/app_name" android:theme="@style/Theme">
        <provider android:authorities="com.twitter.android.provider.TwitterProvider" android:label="@string/twitter_data" android:name=".provider.TwitterProvider" android:permission="com.twitter.android.permission.RESTRICTED">
            <path-permission android:pathPrefix="/search_suggest_query" android:readPermission="android.permission.GLOBAL_SEARCH"/>
            <path-permission android:pathPrefix="/status_groups_view" android:readPermission="com.twitter.android.permission.READ_DATA"/>
        </provider>
        <provider android:authorities="com.twitter.android.provider.GlobalDatabaseProvider" android:exported="false" android:name=".provider.GlobalDatabaseProvider"/>
        <service android:name=".service.TwitterService"/>
        <service android:name=".client.AppService"/>
        <service android:name=".platform.RemoveRawContactsService"/>
        <meta-data android:name="android.app.default_searchable" android:value=".SearchTweetsActivity"/>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="login" android:scheme="twitter"/>
            </intent-filter>
        </activity>
        <activity android:excludeFromRecents="true" android:label="@string/login_about" android:name=".AboutActivity" android:theme="@android:style/Theme"/>
        <activity android:excludeFromRecents="true" android:label="@string/settings" android:name=".SettingsActivity" android:theme="@android:style/Theme"/>
        <activity android:excludeFromRecents="true" android:label="@string/settings" android:name=".WidgetSettingsActivity" android:theme="@android:style/Theme">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <service android:name=".client.WidgetService"/>
        <activity android:launchMode="singleTop" android:name=".HomeTabActivity" android:theme="@style/Theme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="timeline" android:scheme="twitter"/>
                <data android:host="mentions" android:scheme="twitter"/>
            </intent-filter>
        </activity>
        <activity android:name=".TimelineActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="user_timeline" android:scheme="twitter"/>
            </intent-filter>
        </activity>
        <activity android:name=".UsersActivity"/>
        <activity android:name=".ListsActivity"/>
        <activity android:launchMode="singleTop" android:name=".MessagesActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="messages" android:scheme="twitter"/>
            </intent-filter>
        </activity>
        <activity android:name=".ActivitiesActivity"/>
        <activity android:name=".ListTabActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="list" android:scheme="twitter"/>
            </intent-filter>
        </activity>
        <activity android:launchMode="singleTop" android:name=".SearchTweetsActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="search" android:scheme="twitter"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".SearchUsersActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/people_searchable"/>
        </activity>
        <activity android:name=".ListCreateEditActivity"/>
        <activity android:name=".PostActivity" android:theme="@style/Theme.Compose">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="post" android:scheme="twitter"/>
                <data android:host="quote" android:scheme="twitter"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
        </activity>
        <receiver android:label="@string/app_name" android:name=".platform.AccountsChangedReceiver">
            <intent-filter>
                <action android:name="android.accounts.LOGIN_ACCOUNTS_CHANGED"/>
            </intent-filter>
        </receiver>
        <receiver android:label="@string/widget_name_large" android:name=".client.WidgetLargeProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/appwidget_large_provider"/>
        </receiver>
        <receiver android:label="@string/widget_name_small" android:name=".client.WidgetSmallProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/appwidget_small_provider"/>
        </receiver>
        <receiver android:name=".client.AppBroadcastReceiver">
            <intent-filter>
                <action android:name="com.twitter.android.poll.data"/>
                <action android:name="com.twitter.android.widget.button.next"/>
                <action android:name="com.twitter.android.widget.button.prev"/>
            </intent-filter>
        </receiver>
        <receiver android:exported="true" android:name=".platform.InstallReferralReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER"/>
            </intent-filter>
        </receiver>
        <service android:exported="true" android:name=".platform.TwitterAuthenticationService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator" android:resource="@xml/authenticator"/>
        </service>
        <activity android:excludeFromRecents="true" android:exported="true" android:label="@string/authenticator_activity_title" android:name=".AuthenticatorActivity" android:theme="@android:style/Theme.Dialog"/>
        <activity android:name=".TweetActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="status" android:scheme="twitter"/>
                <data android:host="tweet" android:scheme="twitter"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>
        <activity android:name=".MessagesThreadActivity" android:windowSoftInputMode="adjustResize"/>
        <activity android:configChanges="keyboardHidden|orientation" android:name=".EditProfileActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:host="com.android.contacts" android:mimeType="vnd.android.cursor.item/vnd.twitter.profile"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="user" android:scheme="twitter"/>
            </intent-filter>
        </activity>
        <activity android:name=".DialogActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="follow" android:scheme="twitter"/>
                <data android:host="unfollow" android:scheme="twitter"/>
            </intent-filter>
        </activity>
        <activity android:name=".SULActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="keyboardHidden|orientation" android:name=".SignUpActivity"/>
        <activity android:configChanges="keyboardHidden|orientation" android:launchMode="singleTop" android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".WelcomeActivity"/>
        <activity android:name=".FollowActivity"/>
        <activity android:name=".ImageActivity" android:theme="@style/Theme.Dark"/>
        <activity android:configChanges="keyboardHidden|orientation" android:name=".WebViewActivity"/>
        <activity android:name=".DraftsActivity"/>
        <activity android:excludeFromRecents="true" android:label="@string/accounts_title" android:name=".AccountsActivity"/>
        <activity android:excludeFromRecents="true" android:label="@string/accounts_title" android:name=".AccountsDialogActivity" android:theme="@style/Theme.Dialog"/>
        <activity android:excludeFromRecents="true" android:name=".AccountSettingsActivity" android:theme="@android:style/Theme"/>
        <activity android:name=".UrlInterpreterActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="twitter.com" android:scheme="http"/>
                <data android:host="twitter.com" android:scheme="https"/>
                <data android:host="mobile.twitter.com" android:scheme="http"/>
                <data android:host="mobile.twitter.com" android:scheme="https"/>
                <data android:host="www.twitter.com" android:scheme="http"/>
                <data android:host="www.twitter.com" android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".SearchQueriesActivity"/>
        <activity android:name=".StoriesActivity"/>
        <activity android:name=".ConnectActivity">
            <meta-data android:name="android.app.default_searchable" android:value=".SearchUsersActivity"/>
        </activity>
        <service android:exported="true" android:name=".platform.TwitterContactsSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_contacts_adapter"/>
            <meta-data android:name="android.provider.CONTACTS_STRUCTURE" android:resource="@xml/contacts"/>
        </service>
        <service android:exported="true" android:name=".platform.TwitterDataSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_data_adapter"/>
        </service>
        <service android:name=".platform.C2DMService"/>
        <receiver android:name=".platform.C2DMReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.twitter.android"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>
                <category android:name="com.twitter.android"/>
            </intent-filter>
        </receiver>
        <service android:name=".service.ScribeService"/>
    </application>
</manifest>
