<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="auto" package="com.facebook.orca">
    <supports-screens android:anyDensity="true"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="com.facebook.katana.provider.ACCESS"/>
    <permission android:name="com.facebook.orca.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="com.facebook.orca.permission.C2D_MESSAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <application android:debuggable="false" android:icon="@drawable/launcher_icon" android:label="@string/app_name_short" android:name=".app.OrcaApplication">
        <activity android:name=".auth.StartScreenActivity" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".about.OrcaAboutActivity" android:theme="@android:style/Theme.Dialog"/>
        <activity android:name=".auth.LoginScreenActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name=".auth.LoginApprovalActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".auth.EnterPhoneNumberActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".auth.ConfirmPhoneNumberActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".auth.SilentLoginActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".auth.UpgradeScreenActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".threadlist.ThreadListActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:label="@string/app_name" android:name=".threadview.ThreadViewActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".threadview.ThreadViewMapActivityTabImpl"/>
        <activity android:label="@string/app_name" android:name=".member.MemberActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:label="@string/app_name" android:name=".messageview.MessageViewActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".member.RemoveMemberActivity" android:theme="@style/Theme.OrcaDialog"/>
        <activity android:name=".member.LeaveThreadActivity" android:theme="@style/Theme.OrcaDialog"/>
        <activity android:name=".member.DeleteThreadActivity" android:theme="@style/Theme.OrcaDialog"/>
        <activity android:label="@string/app_name" android:name=".creation.CreateThreadActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysVisible|adjustResize"/>
        <activity android:label="@string/app_name" android:name=".threadview.AddMembersActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysVisible|adjustResize"/>
        <activity android:label="@string/app_name" android:name=".photos.view.PhotoViewActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:label="@string/app_name" android:name=".prefs.OrcaRootPreferenceActivity" android:theme="@android:style/Theme.Light.NoTitleBar"/>
        <activity android:label="@string/app_name" android:name=".prefs.OrcaAdvancedPreferenceActivity" android:theme="@android:style/Theme.Light.NoTitleBar"/>
        <activity android:label="@string/app_name" android:name=".prefs.OrcaInternalPreferenceActivity" android:theme="@android:style/Theme.Light.NoTitleBar"/>
        <activity android:name=".contacts.picker.ContactPickerIdentityChooserActivity" android:theme="@style/Theme.OrcaPopup"/>
        <activity android:name=".images.ThreadIconPickerActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".camera.CropImage"/>
        <activity android:name=".images.ImageSearchActivity" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".intents.IntentHandler">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="fb-messenger"/>
            </intent-filter>
        </activity>
        <activity android:name=".intents.CanonicalThreadHandler" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:label="@string/app_name" android:name=".intents.ShareLauncherActivity" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <service android:name=".push.mqtt.MqttPushService"/>
        <service android:name=".push.c2dm.C2DMReceiver"/>
        <receiver android:name=".push.c2dm.C2DMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.facebook.orca"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>
                <category android:name="com.facebook.orca"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".database.AddressBookPeriodicRunner$LocalBroadcastReceiver">
            <intent-filter>
                <action android:name="com.facebook.orca.PROCESS_ADDRESSBOOK_ALARM"/>
                <category android:name="com.facebook.orca"/>
            </intent-filter>
        </receiver>
        <service android:name=".server.OrcaService"/>
        <uses-library android:name="com.google.android.maps" android:required="false"/>
    </application>
</manifest>
